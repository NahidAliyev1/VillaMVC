@using VillaMVC.Models
@using VillaMVC.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model VillaVM



<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Basic Form</h6>
        <form asp-area="Admin" asp-controller="Villa" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Image</label>
                <input asp-for="ImgFile" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp">
                <span asp-validation-for="ImgFile" class="text-danger"></span>
                <div id="emailHelp" class="form-text">
                    We'll never share your email with anyone else.
                </div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Place</label>
                <input asp-for="Place" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Bedrooms</label>
                <input asp-for="Bedrooms" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Bedrooms" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">BathRooms</label>
                <input asp-for="Bathrooms" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Bathrooms" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Area</label>
                <input asp-for="Area" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Floor</label>
                <input asp-for="Floor" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Parking</label>
                <input asp-for="Parking" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Parking" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
